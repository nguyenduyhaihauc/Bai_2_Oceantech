<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/chkBeverage_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuoc cam"
        tools:ignore="HardcodedText"/>

    <CheckBox
        android:id="@+id/chkBeverage_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuoc tao"
        tools:ignore="HardcodedText"/>

    <CheckBox
        android:id="@+id/chkBeverage_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuoc oi"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnBackBeverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_button"
            tools:ignore="ButtonStyle,HardcodedText"/>

        <Button
            android:id="@+id/btnNextBeverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_button"
            tools:ignore="ButtonStyle,HardcodedText"/>
    </LinearLayout>

</LinearLayout>